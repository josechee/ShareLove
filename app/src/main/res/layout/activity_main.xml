<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    tools:context=".MainActivity">

    <View
        android:id="@+id/toolbar"
        android:layout_width="800dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="503dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/logo_sharel"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/pattaya"
        android:text="@string/logo_sharel"
        android:textAppearance="@style/logo_sharelove"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/frase"
        android:layout_width="320dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="1sp"
        android:text="@string/frase"
        android:textAppearance="@style/frase"
        android:translationY="-0.59sp" />
    <EditText
        android:id="@+id/usuario"
        android:layout_width="580dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shadow_1"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:hint="@string/usuario"
        android:textAppearance="@style/text"
        tools:ignore="Autofill,TextFields" />

    <EditText
        android:id="@+id/contraseña"
        android:layout_width="580dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/shadow_1"
        android:gravity="center_vertical"
        android:hint="@string/contraseña"
        android:lineSpacingExtra="2sp"
        android:textAppearance="@style/text"
        tools:ignore="Autofill,TextFields" />

    <Button
        android:id="@+id/buttonIniciarSesion"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="418dp"
        android:layout_marginBottom="202dp"
        android:background="@drawable/boton"
        android:lineSpacingExtra="1sp"
        android:text="@string/botontext"
        android:textAppearance="@style/botontext"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/olvidaste_contraseña"
        android:layout_width="194dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="495dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="@string/olvidaste_t"
        android:textAppearance="@style/olvidaste_t"
        android:translationY="-0.86sp" />

    <TextView
        android:id="@+id/no_tienes_u"
        android:layout_width="166dp"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="43dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="@string/no_tienes_usuario"
        android:textAppearance="@style/no_tienes_u"
        android:translationY="-1.08sp" />

    <Button
        android:id="@+id/crear_cuenta"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="582dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/crear_cuenta"
        android:text="@string/botontextcrearcuenta" />

</RelativeLayout>